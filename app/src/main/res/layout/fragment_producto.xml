            android:layout_margin="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <TextView
            android:id="@+id/titulobalon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Stringproducto"
            android:textColor="@color/blanco"
            android:textSize="30sp"/>
            <TextView
                android:id="@+id/descripbalon_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DesBalon_productFrag"
                android:textColor="@color/blanco"
                android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10sp">
                <TextView
                    android:id="@+id/textStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stock_product"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"
                    android:layout_marginEnd="10sp"/>

                <TextView
                    android:id="@+id/intValorSrock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ValorStock"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"
                    android:layout_marginEnd="10sp"/>
                    <TextView
                        android:id="@+id/cantidadIngresarbalon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textEdit_Products"
                        android:textColor="@color/blanco"
                        android:textSize="15sp"
                        android:layout_marginEnd="10sp"/>
                    <EditText
                        android:id="@+id/baloncantidad"
                        style="@style/edit_iniciar"
                        android:background="@color/blanco"
                        android:layout_width="100sp"
                        android:layout_height="20sp"
                        android:textColor="@color/azul"
                        />

                </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/precioBalon_Products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/violeta"
                    android:textSize="20sp"
                    android:text="@string/precio_productos"
                    android:layout_marginHorizontal="5sp"/>
