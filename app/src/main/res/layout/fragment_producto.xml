                    android:id="@+id/Btnagregarprod2"
                    style="@style/edit_iniciar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@null"
                    android:layout_marginStart="10sp"
                    android:text="@string/text_btnagregar"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            style="@style/edit_carrito"
