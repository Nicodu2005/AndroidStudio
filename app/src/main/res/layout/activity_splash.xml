<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violeta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

    <ImageView
        android:id="@+id/img_view_splash"
        android:layout_width="267dp"
        android:layout_height="306dp"
        android:layout_marginTop="80sp"
        android:layout_marginStart="30sp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/nombre_app_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:fontFamily="@font/bowlby_one"
        android:text="@string/nombre_App"
        android:textColor="@color/blanco"
        android:textSize="35sp"
        android:layout_marginStart="60sp"
        android:layout_marginTop="40sp"
        />

    <TextView
        android:id="@+id/text_nombre_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/allan"
        android:text="@string/text_nombre"
        android:textColor="@color/blanco"
        android:textSize="20sp"
        android:layout_marginVertical="90sp"
        android:layout_marginStart="230sp"
        />

    </LinearLayout>
</ScrollView>