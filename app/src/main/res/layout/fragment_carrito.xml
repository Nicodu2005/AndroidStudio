<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violeta">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo_carrito"
            android:layout_width="163dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/carrito"
            android:backgroundTint="@null"
            android:paddingStart="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp">

      <!--unicio de productos-->
        <LinearLayout
            style="@style/edit_carrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:backgroundTint="@null">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10sp">
        <ImageView
            android:id="@+id/Porductos"
            android:layout_width="103dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/productos"
            android:paddingStart="10dp"
            android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/img_borrar"
                    android:layout_width="70sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:backgroundTint="@null"
                    android:paddingStart="10dp"
                    app:srcCompat="@drawable/borrar" />
            </LinearLayout>



            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/TextProducto"
            android:text="@string/_1_producto"
            android:textColor="@color/blanco"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginStart="15sp"
            android:layout_gravity="top"
            android:textSize="30sp"
            android:layout_marginBottom="15dp">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="240sp"
            android:id="@+id/Textdescripcion"
            android:text="@string/proDesc_Carrito"
            android:textColor="@color/blanco"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginStart="5sp"
            android:layout_gravity="top"
            android:textSize="15sp"
            android:layout_marginBottom="10sp">
        </TextView>
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textcantidad"
                android:text="@string/cantidad_producto_carrito"
                android:textColor="@color/blanco"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginStart="35sp"
                android:layout_gravity="top"
                android:textSize="20sp">
            </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/valor"
        android:text="@string/precio"
        android:textColor="@color/blanco"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginStart="35sp"
        android:layout_gravity="top"
        android:textSize="20sp"/>

        </LinearLayout>
        </LinearLayout>

    </LinearLayout>


        <!--unicio de productos-->
        <LinearLayout
            style="@style/edit_carrito"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:backgroundTint="@null">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10sp">
                <ImageView
                    android:id="@+id/Porductos2"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/productos"
                    android:paddingStart="10dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/img_borrar2"
                    android:layout_width="70sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:backgroundTint="@null"
                    android:paddingStart="10dp"
                    app:srcCompat="@drawable/borrar" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/TextProducto2"
                    android:text="@string/_2_producto"
                    android:textColor="@color/blanco"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginStart="15sp"
                    android:layout_gravity="top"
                    android:textSize="30sp"
                    android:layout_marginBottom="15dp">
                </TextView>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="240sp"
                    android:id="@+id/Textdescripcion2"
                    android:text="@string/proDesc_Carrito2"
                    android:textColor="@color/blanco"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginStart="5sp"
                    android:layout_gravity="top"
                    android:textSize="15sp"
                    android:layout_marginBottom="10sp">
                </TextView>
                <LinearLayout
                    android:layout_width="250sp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/textcantidad2"
                        android:text="@string/cantidad_producto_carrito"
                        android:textColor="@color/blanco"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_marginStart="35sp"
                        android:layout_gravity="top"
                        android:textSize="20sp">
                    </TextView>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/valor2"
                        android:text="@string/precio"
                        android:textColor="@color/blanco"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_marginStart="35sp"
                        android:layout_gravity="top"
                        android:textSize="20sp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <TextView
                android:layout_marginTop="20sp"
                android:id="@+id/TotalCarrito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_Carrito"
                android:textColor="@color/blanco"
                android:textSize="30sp"/>

        <TextView
            android:layout_marginTop="20sp"
            android:id="@+id/Totalproductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productos total: 4"
            android:textColor="@color/blanco"
            android:textSize="30sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edit_iniciar"
            android:text="@string/btn_pagar"
            android:textSize="20sp"
            app:backgroundTint="@null"
            android:layout_marginTop="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    </LinearLayout>

</ScrollView>