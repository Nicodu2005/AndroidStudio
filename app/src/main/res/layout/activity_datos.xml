<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violeta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/input_destino"
            style="@style/EditTextRounded"
            android:layout_width="209dp"
            android:layout_height="61dp"
            android:ems="10"
            android:hint="destinos"
            android:textColor="@color/negro"
            android:textSize="20sp"
            android:layout_margin="30sp"
            />
        <EditText
            android:id="@+id/input_dias"
            style="@style/EditTextRounded"
            android:layout_width="209dp"
            android:layout_height="61dp"
            android:ems="10"
            android:hint="dias"
            android:textColor="@color/negro"
            android:textSize="20sp"
            android:layout_margin="30sp"
            />
        <EditText
            android:id="@+id/input_personas"
            style="@style/EditTextRounded"
            android:layout_width="209dp"
            android:layout_height="61dp"
            android:ems="10"
            android:inputType="number"
            android:hint="numero de personas"
            android:textColor="@color/negro"
            android:textSize="20sp"
            android:layout_margin="30sp"

            />
        <EditText
            android:id="@+id/input_categoria"
            style="@style/EditTextRounded"
            android:layout_width="209dp"
            android:layout_height="61dp"
            android:ems="10"
            android:hint="Categoria de plan"
            android:textColor="@color/negro"
            android:textSize="20sp"
            android:layout_margin="30sp"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/button_calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />
    </LinearLayout>




</ScrollView>