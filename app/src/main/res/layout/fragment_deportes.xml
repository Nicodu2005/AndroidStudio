<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/violeta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            style="@style/edit_carrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20sp">
            <ImageView

                android:id="@+id/imgbal_deport"
                android:layout_width="80dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/deportes"
                android:layout_margin="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titulobal_depo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Stringproducto"
                    android:textColor="@color/blanco"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/descripbalon_deport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DesBalon_productFrag"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/precioBalon_depor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/violeta"
                        android:textSize="20sp"
                        android:text="@string/precio_productos"
                        android:layout_marginRight="20sp"/>
                    <TextView
                        android:id="@+id/valordepor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/violeta"
                        android:text="@string/precioBalon_Products"/>
                    <Button
                        android:id="@+id/Btnagregardep1"
                        style="@style/edit_iniciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:layout_marginStart="5sp"
                        android:text="@string/text_btnagregar"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            style="@style/edit_carrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20sp">

            <ImageView
                android:id="@+id/imgdepor2"
                android:layout_width="80dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/deportes"
                android:layout_margin="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titmancu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mancuernas"
                    android:textColor="@color/blanco"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/descripropa_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mancu_Dep"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/precioman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/violeta"
                        android:textSize="20sp"
                        android:text="@string/precio_productos"
                        android:layout_marginRight="20sp"/>
                    <TextView
                        android:id="@+id/valormacu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/violeta"
                        android:text="@string/_70000"/>
                    <Button
                        android:id="@+id/Btnagregardep2"
                        style="@style/edit_iniciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:layout_marginStart="5sp"
                        android:text="@string/text_btnagregar"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/edit_carrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20sp">
            <ImageView

                android:id="@+id/imgdepor3"
                android:layout_width="80dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/deportes"
                android:layout_margin="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titulobici"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bici_Depor"
                    android:textColor="@color/blanco"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/desbici_deport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desbici_Depor"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/preciobici"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/violeta"
                        android:textSize="20sp"
                        android:text="@string/precio_productos"
                        android:layout_marginRight="20sp"/>
                    <TextView
                        android:id="@+id/valorbici"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/violeta"
                        android:text="@string/valorHogar"/>
                    <Button
                        android:id="@+id/BtnagregarDep4"
                        style="@style/edit_iniciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:layout_marginStart="5sp"
                        android:text="@string/text_btnagregar"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/edit_carrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20sp">
            <ImageView
                android:id="@+id/imgtech"
                android:layout_width="80dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/deportes"
                android:layout_margin="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titcuerda_depor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cuerda_para_saltar_de_velocidad"
                    android:textColor="@color/blanco"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/descrielec_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descuerda_Depo"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/preciotech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/violeta"
                        android:textSize="20sp"
                        android:text="@string/precio_productos" />
                    <TextView
                        android:id="@+id/valortech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/violeta"
                        android:text="@string/valorCuerda"/>
                    <Button
                        android:id="@+id/Btnagregardep4"
                        style="@style/edit_iniciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:layout_marginStart="5sp"
                        android:text="@string/text_btnagregar"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/edit_carrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20sp">
            <ImageView
                android:id="@+id/imgdepor5"
                android:layout_width="80dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/deportes"
                android:layout_margin="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titbotella"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tit_botella"
                    android:textColor="@color/blanco"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/desBotella"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desBotella"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/preciobotella"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/violeta"
                        android:textSize="20sp"
                        android:text="@string/precio_productos"
                        android:layout_marginRight="20sp"/>
                    <TextView
                        android:id="@+id/valorbotella"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/violeta"
                        android:text="@string/_60000"/>

                    <Button
                        android:id="@+id/Btnagregardep8"
                        style="@style/edit_iniciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:layout_marginStart="5sp"
                        android:text="@string/text_btnagregar"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</ScrollView>