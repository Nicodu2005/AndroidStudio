<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/violeta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            style="@style/edit_carrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20sp">
            <ImageView
                android:id="@+id/imgprodhogar1"
                android:layout_width="80dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/casa"
                android:layout_margin="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titulobalon_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/products_hogar"
                    android:textColor="@color/blanco"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/descripbalon_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descrlamp_HOgar"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/preciolamp_Products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/violeta"
                        android:textSize="20sp"
                        android:text="@string/precio_productos"
                        android:layout_marginRight="10sp"/>
                    <TextView
                        android:id="@+id/valorlampara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/violeta"
                        android:text="@string/precioBalon_Products"/>
                    <Button
                        android:id="@+id/Btnagregar"
                        style="@style/edit_iniciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:layout_marginStart="10sp"
                        android:text="@string/text_btnagregar"/>



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            style="@style/edit_carrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20sp">

            <ImageView
                android:id="@+id/imgprodhogar2"
                android:layout_width="80dp"
                android:layout_height="128dp"
                android:layout_margin="10sp"
                app:srcCompat="@drawable/casa" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tituloOrga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orgatitulo"
                    android:textColor="@color/blanco"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/descripropa_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/des_orga"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/precioorga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/violeta"
                        android:textSize="20sp"
                        android:text="@string/precio_productos"
                        android:layout_marginRight="10sp"/>
                    <TextView
                        android:id="@+id/valorOrga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/violeta"
                        android:text="300000"/>
                    <Button
                        android:id="@+id/Btnagregar2"
                        style="@style/edit_iniciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:layout_marginStart="5sp"
                        android:text="@string/text_btnagregar"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/edit_carrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20sp">
            <ImageView
                android:id="@+id/imgprodhogar3"
                android:layout_width="80dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/casa"
                android:layout_margin="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titulohogar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estaca para Jardin"
                    android:textColor="@color/blanco"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/desHogar_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deshogar_producto"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/preciohogar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/violeta"
                        android:textSize="20sp"
                        android:text="@string/precio_productos"
                        android:layout_marginRight="20sp"/>
                    <TextView
                        android:id="@+id/valorhogar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/violeta"
                        android:text="@string/valorHogar"/>
                    <Button
                        android:id="@+id/Btnagregar3"
                        style="@style/edit_iniciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:layout_marginStart="10sp"
                        android:text="@string/text_btnagregar"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/edit_carrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20sp">
            <ImageView
                android:id="@+id/imgprodhogar4"
                android:layout_width="80dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/casa"
                android:layout_margin="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tituloElec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_de_utensilios_de_cocina"
                    android:textColor="@color/blanco"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/descrielec_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desc_title"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/preciotech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/violeta"
                        android:textSize="20sp"
                        android:text="@string/precio_productos"
                        android:layout_marginRight="10sp"/>
                    <TextView
                        android:id="@+id/valortech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/violeta"
                        android:text="@string/valor_Set"/>

                    <Button
                        android:id="@+id/Btnagregar4"
                        style="@style/edit_iniciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:layout_marginStart="5sp"
                        android:text="@string/text_btnagregar"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/edit_carrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20sp">
            <ImageView

                android:id="@+id/imgprodhogar5"
                android:layout_width="80dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/casa"
                android:layout_margin="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tituloAroma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aroma_hogar"
                    android:textColor="@color/blanco"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/desAcc_produc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/des_aromas"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/precioaromas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/violeta"
                        android:textSize="20sp"
                        android:text="@string/precio_productos"
                        android:layout_marginRight="20sp"/>

                    <TextView
                        android:id="@+id/valoraromas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/violeta"
                        android:text="@string/_60000"/>
                    <Button
                        android:id="@+id/Btnagregar5"
                        style="@style/edit_iniciar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:layout_marginStart="10sp"
                        android:text="@string/text_btnagregar"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</ScrollView>